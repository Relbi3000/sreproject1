<div class="card mx-auto" style="max-width: 600px;">
  <div class="card-header">
    <h4>Редактировать событие</h4>
  </div>
  <div class="card-body">
    <form action="/events/edit/<%= event._id %>?_method=PUT" method="POST">
      <div class="form-group mb-3">
        <label for="name">Название события</label>
        <input type="text" name="name" id="name" class="form-control" value="<%= event.name %>" required>
      </div>
      <div class="form-group mb-3">
        <label for="date">Дата</label>
        <input type="date" name="date" id="date" class="form-control" value="<%= new Date(event.date).toISOString().split('T')[0] %>" required>
      </div>
      <div class="form-group mb-3">
        <label for="location">Место проведения</label>
        <input type="text" name="location" id="location" class="form-control" value="<%= event.location %>" required>
      </div>
      <div class="form-group mb-3">
        <label for="description">Описание</label>
        <textarea name="description" id="description" class="form-control" rows="3"><%= event.description %></textarea>
      </div>
      <button type="submit" class="btn btn-primary w-100">Сохранить изменения</button>
    </form>
  </div>
</div>
