<div class="container">
    <h2 class="mt-4">Список спортивных событий</h2>
    <a href="/events/add" class="btn btn-primary mb-3">Добавить событие</a>
    <% if (events.length === 0) { %>
        <p class="text-muted">События отсутствуют.</p>
    <% } else { %>
        <div class="list-group">
            <% events.forEach(event => { %>
                <a href="/events/<%= event._id %>" class="list-group-item list-group-item-action">
                    <h5><%= event.name %></h5>
                    <p><%= new Date(event.date).toLocaleDateString() %> | <%= event.location %></p>
                    <small><%= event.description ? event.description.substring(0, 100) : '' %>...</small>
                </a>
            <% }) %>
        </div>
    <% } %>
</div>
